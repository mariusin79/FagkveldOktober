@using FagkveldOktober
@model FagkveldOktober.Models.PurchaseViewModel
<div class="page-header">
    <h2>Book Info</h2>
</div>
<h3>{{selectedBook.title}}</h3>
<input class="btn btn-default btn-primary" type="button" value="Add To Cart" ng-click="purchaseBook(selectedBook.id.value)" />

<h2>Customers Who Bought This Book Also Bought</h2>
<div class="row">
    <div class="col-lg-1" ng-repeat="book in alsoBought">
        <a class="thumbnail" href="{{book.url}}">{{book.title}}</a>
    </div>
</div>

@section AdditionalScripts
{
    <script type="text/javascript">
        window.bookStoreData = @Html.Serialize(Model);
    </script>
}

